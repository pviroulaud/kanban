
@{
    ViewData["Title"] = "Reportes De Estimacion Semanal";
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        <h3>@ViewData["Title"]</h3>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header p-2">
                Filtros
            </div>
            <div class="card-body p-1" id="contenedorFiltros">
                <div class="row">

                    <div class="col-sm-4">
                        <label class="col-sm-12 col-form-label" for="txtSemana">Semana Desde:</label>
                        <input type="week" id="txtSemana" class="form-control text-center">
                        <div id="validtxtSemana" class="invalid-feedback" style="display:none">
                            El campo Semana Desde debe ser anterior al campo Semana Hasta
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <label class="col-sm-12 col-form-label" for="txtSemanaHasta">Semana Hasta:</label>
                        <input type="week" id="txtSemanaHasta" class="form-control text-center">
                    </div>
                    
                    <div class="col-sm-4">
                        <label class="col-sm-12 col-form-label" for="ddlFiltroUsuarios">Usuario:</label>
                        <select multiple class="form-control " id="ddlFiltroUsuarios" style="width:100%">
                        </select>
                    </div>
                   
                </div>
                <div class="col">
                    <button type="button" class="btn btn-primary float-end mt-1" id="btnGenerarReporte"><i class="fas fa-calendar me-1"></i>Generar Reporte</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div >
    <br />
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <div class="card">
                <div class="card-title">
                    <h5>Datos del Reporte</h5>
                </div>
                <div class="card-body" id="datosFiltro">
                    <ul>
                        <li>
                            <strong>Semana: </strong><span id="infoSemana">-</span>
                        </li>
                        <li>
                            <strong>Desde: </strong><span id="infoDesde">-</span>
                        </li>
                        <li>
                            <strong>Hasta: </strong><span id="infoHasta">-</span>
                        </li>                        
                        <li>
                            <strong>Total Horas Periodo: </strong><span id="infoHsPeriodo">-</span>
                        </li>
                        <li>
                            <strong>Total Horas Estimacion: </strong><span id="infoEestimacion">-</span>
                        </li>
                        <li>
                            <strong>Usuarios: </strong><span id="infoUsuarios">-</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="card">
                <div class="card-title">
                    <h5>Totales Periodo (Hs)</h5>
                </div>
                <div class="card-body">
                    <canvas id="graficoTotales" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block; width: 487px;"></canvas>
                </div>
            </div>
        </div>
    </div>
    
    <br />
    <div class="col-sm-12">
        <div class="card">
            <div class="card-title">
                <h5>Detalle del Reporte</h5>
            </div>
            <div class="card-body" id="detalleReporte">
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>Semana</th>

                            <th>Incidencia</th>
                            <th>Tarea</th>                            
                            <th>Usuario</th>
                            <th>Estimacion (Hs)</th>
                            
                            <th>Total Estimacion (Hs)</th>                            
                        </tr>
                    </thead>
                    <tbody id="tabla" class="text-center">

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<input type="hidden" value="@Url.Action("EstimacionSemanal", "Reportes")" id="estimacionSemanal" />
<input type="hidden" value="@Url.Action("listar", "Usuarios")" id="listarUsuarios" />
@section Scripts{
    <script src="~/lib/chart.js/Chart.min.js"></script>

    <script src="~/js/reportes/reporteSemanal.js"></script>
   
    
}


