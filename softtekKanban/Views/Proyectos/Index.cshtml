
@{
    ViewData["Title"] = "Administraci√≥n de Proyectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        <h3>@ViewData["Title"]</h3>
    </div>
</div>
<div class="row d-none">
    <div class="col">
        <div class="card">
            <div class="card-header p-2">
                Filtros
            </div>
            <div class="card-body p-1">
                <div class="row">
                    <div class="col">
                        <label for="txtFilterNombreProyecto" class="form-label mb-1">Nombre</label>
                        <input type="text" class="form-control" id="txtFilterNombreProyecto">
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-secondary mt-4" id="btnBuscarProyecto"><i class="fas fa-search me-1"></i>Buscar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <button type="button" class="btn btn-primary float-end mt-1" id="btnNuevoProyecto"><i class="fas fa-plus-circle me-1"></i>Nuevo Proyecto</button>
        <table id="dt-dataProyectos" class="display compact" style="width:100%">
        </table>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="modal-proyecto" aria-labelledby="modalLbl" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="dialog">
        <div class="modal-content">
            <div class="modal-header pt-2 pb-2">
                <h4 class="modal-title" id="modalLbl"> Proyecto </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body pt-2 pb-2">
                <div class="row mb-2">
                    <label class="col-sm-3 col-form-label" for="txtNombreProyecto">Nombre:</label>
                    <div class="col-sm-9">
                        <input type="hidden" id="idProyecto">
                        <input type="text" id="txtNombreProyecto" class="form-control" maxlength="50" required>
                        <div id="validtxtNombreProyecto" class="invalid-feedback" style="display:none">
                            Este campo es obligatorio
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <label class="col-sm-3 col-form-label" for="txtCodigoProyecto">Codigo de Proyecto:</label>
                    <div class="col-sm-9">
                        <input type="text" id="txtCodigoProyecto" class="form-control" maxlength="50" required>
                        <div id="validtxtCodigoProyecto" class="invalid-feedback" style="display:none">
                            Este campo es obligatorio
                        </div>
                    </div>
                </div>                        
            </div>
            <div class="modal-footer pt-2 pb-2">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button id="btnGuardarProyecto" type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" value="@Url.Action("listar", "Proyectos")" id="listarProyectos" />
<input type="hidden" value="@Url.Action("nuevo", "Proyectos")" id="nuevoProyecto" />
<input type="hidden" value="@Url.Action("eliminar", "Proyectos")" id="eliminarProyecto" />
<input type="hidden" value="@Url.Action("obtener", "Proyectos")" id="obtenerProyecto" />
<input type="hidden" value="@Url.Action("actualizar", "Proyectos")" id="actualizarProyecto" />
@section Scripts{
    <script src="~/js/proyectos/proyectos.js"></script>

}


