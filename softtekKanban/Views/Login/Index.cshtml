@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <h1>KanBan</h1>
            </div>
            <div class="card-body">
                <p>Ingreso a la aplicaci&oacute;n</p>
                <form id="frmLogin">
                    <div class="form-group mb-3">
                        <div class="input-group">
                            <input type="text" class="form-control" name="txt_nombreUsuarioLogin" id="txt_nombreUsuarioLogin" placeholder="Nombre de Usuario">                            
                        </div>
                        <label for="txt_nombreUsuarioLogin"  id="validtxt_nombreUsuarioLogin" class="text-danger text-xs d-none">Campo Requerido</label>
                    </div>
                    <div class="form-group mb-3">
                        <div class="input-group">
                            <input type="password" class="form-control" name="txt_passUsuarioLogin" id="txt_passUsuarioLogin" placeholder="ContraseÃ±a">                            
                        </div>
                        <label for="txt_passUsuarioLogin" id="validtxt_passUsuarioLogin" class="text-danger text-xs d-none">Campo Requerido</label>
                    </div>

                    <div class="col-sm-12">
                        <button type="button" id="btnLogin" class="btn btn-primary btn-block">Iniciar Sesi&oacute;n</button>
                    </div>
                </form>
                
            </div>

        </div>
    </div>
</body>
<input type="hidden" value="@Url.Action("auth", "Login")" id="login" />
<input type="hidden" value="@Url.Action("Index", "Home")" id="home" />
@section Scripts{
